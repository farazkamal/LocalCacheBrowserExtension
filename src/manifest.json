{
  "manifest_version": 2,
  "name": "Local Cache",
  "description": "Cache ajax requests to your local machine, making page loads faster and more predictable.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "main.js" ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon.png"
  },
  "permissions": [
    "storage",
    "<all_urls>"
  ]
}